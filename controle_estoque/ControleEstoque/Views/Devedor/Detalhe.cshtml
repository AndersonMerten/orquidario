@model ControleEstoque.Models.Devedor
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <br />
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Cliente devedor: @Model.Cliente</h4>
            </div>

            <div class="panel-body">

                <div class="text-left detalhes col-lg-6 col-md-6 col-sm-6">
                    <h4><b>Detalhes do devedor</b></h4>
                    <div><b>Nome:</b> @Model.Cliente</div>
                    <div><b>Valor devido:</b> @Model.ValorDevido</div>
                    <div><b>Contato:</b> R$@Model.Contato</div>
                    <div><b>Observações:</b> @Model.Observacoes</div>



                </div>
            </div>
            <div class="panel-footer">
                @using (Html.BeginForm("Delete", "Devedor", new { Model.Id }))
                {
                    @Html.ActionLink(
                     linkText: " Editar Devedor",
                     actionName: "Edit",
                     routeValues: new { Model.Id }, // or to pass some value -> routeValues: new { id = 1 },
                     htmlAttributes: new { @class = "btn btn-info " }
                     );

                    <button type="submit" class="btn btn-danger">Deletar Produto</button>

                    <a style="float:right" class="btn btn-info" onclick="history.go(-1); return false;" href="#"><i aria-hidden="true"></i>&nbsp;Voltar</a>

                }

            </div>
        </div>
    </div>
</body>
</html>