@model ControleEstoque.Models.Pedido
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <br />
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>@Model.Id</h4>
            </div>

            <div class="panel-body">

                <div class="text-left detalhes col-lg-6 col-md-6 col-sm-6">
                    <h4><b>Detalhes do pedido</b></h4>
                    <div><b>Nº do pedido:</b> @Model.Id</div>
                    <div><b>Cliente:</b> @Model.Cliente.Nome</div>
                    <div><b>Produto comprado:</b> @Model.Produto.Nome</div>
                    <div><b>Transportadora:</b> @Model.Transportadora.Nome</div>

                </div>
            </div>
            <div class="panel-footer">
                @using (Html.BeginForm("Delete", "Pedido", new { Model.Id }))
                {
                    @Html.ActionLink(
                     linkText: " Editar Pedido",
                     actionName: "Edit",
                     routeValues: new { Model.Id }, // or to pass some value -> routeValues: new { id = 1 },
                     htmlAttributes: new { @class = "btn btn-info " }
                     );

                    <button type="submit" class="btn btn-danger">Deletar Pedido</button>

                    <a style="float:right" class="btn btn-info" onclick="history.go(-1); return false;" href="#"><i aria-hidden="true"></i>&nbsp;Voltar</a>

                }

            </div>
        </div>
    </div>
</body>
</html>